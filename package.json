{
  "name": "@rrrm/countries",
  "version": "0.0.19",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "prepare": "pnpm run build",
    "clean:dist": "rimraf dist/",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 pnpm run clean:dist && vite build"
  },
  "author": {
    "name": "Rafael Magalhaes",
    "email": "rafaelmagalhaes93@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rafaelmagalhaes/countries"
  },
  "description": "a list of countries and cities based on JSON file",
  "keywords": [
    "cities",
    "json",
    "countries",
    "country",
    "city",
    "csv",
    "sql",
    "flags"
  ],
  "devDependencies": {
    "@types/node": "^20.8.9",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-compress": "^2.1.1",
    "vite-plugin-compression2": "^0.11.0",
    "vite-plugin-dts": "^3.6.3"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/": {
      "import": "./dist/",
      "require": "./dist/"
    }
  },
  "license": "MIT"
}
